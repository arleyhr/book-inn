      ]
    },
    {
      "name": "Seeder",
      "item": [
        {
          "name": "Generate Seed Data",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/seeder/generate?count=5",
              "host": ["{{base_url}}"],
              "path": ["seeder", "generate"],
              "query": [
                {
                  "key": "count",
                  "value": "5",
                  "description": "Número de hoteles a generar (por defecto: 10)"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
