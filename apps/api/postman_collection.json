        {
          "name": "Get Hotel Reservations (Agent)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reservations/hotel/1",
              "host": ["{{base_url}}"],
