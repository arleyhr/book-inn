# Run the container with `docker run -p 3000:3000 -t book-inn`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system book-inn && \
          adduser --system -G book-inn book-inn

COPY dist/apps/book-inn book-inn/
RUN chown -R book-inn:book-inn .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix book-inn --omit=dev -f install

CMD [ "node", "book-inn" ]
